{% extends 'base.html.twig' %}

{% block stylesheets %}
{% endblock %}

{% block body %}
    <header class="masthead text-center text-white d-flex"
            style="background-image: url('{{ asset('assets/img/header3.jpg') }}')">
        <div class="container my-auto">
            <form class="content" method="post" action="{{ path('check') }}">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h2 class="text-center text-dark">Identifícate</h2>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <input type="text" class="form-control input-lg" name="_username" autocapitalize="none"
                                       required="required" placeholder="Email" tabindex="1"/>
                            </div>

                            <div class="form-group">
                                <input type="password" class="form-control input-lg" name="_password"
                                       autocapitalize="none"
                                       required="required" placeholder="Contraseña" tabindex="2"/>
                            </div>

                            <div class="form-group">
                                <input type="submit" class="btn btn-block btn-lg btn-primary" value="Entrar"
                                       tabindex="3"/>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </header>
{% endblock %}